
@{
    this.ViewData["Title"] = "Home Page";
}


<div class="container-fluid ml-5">
    <div class="text-left">
        <h1 class="display-4">UNCOMLETED ORDERS</h1>
    </div>
    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th scope="col" class="col-lg-2 suls-text-color">Sequence</th>
                <th scope="col" class="col-lg-2 suls-text-color">Receiver</th>
                <th scope="col" class="col-lg-2 suls-text-color">PacksCount</th>
                <th scope="col" class="col-lg-2 suls-text-color">PacksWeight</th>
                <th scope="col" class="col-lg-2 suls-text-color">DeliveryAddress</th>
                <th scope="col" class="col-lg-2 suls-text-color">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr class="row">
                    <td class="col-lg-2 suls-text-color">@order.SequenceNumber</td>
                    <td class="col-lg-2 suls-text-color">@order.Receiver.Name</td>
                    <td class="col-lg-2 suls-text-color">N/A</td>
                    <td class="col-lg-2 suls-text-color">N/A</td>
                    <td class="col-lg-2 suls-text-color">N/A</td>
                    <td class="col-lg-2 suls-text-color">
                        <div class="button-holder">
                            <a href="/Orders/Edit?id=@order.Id" class="btn btn-warning">Edit</a>
                            <a href="/Orders/Remove?id=@order.Id" class="btn btn-warning">Remove</a>
                        </div>
                    </td>
                </tr>
            }
            <tr class="row">
                <td class="col-lg-2 suls-text-color">-</td>
                <td class="col-lg-2 suls-text-color">-</td>
                <td class="col-lg-2 suls-text-color">-</td>
                <td class="col-lg-2 suls-text-color">-</td>
                <td class="col-lg-2 suls-text-color">-</td>
                <td class="col-lg-2 suls-text-color">
                    <div class="button-holder">
                        <a href="/Orders/Create" class="btn btn-warning">+ New Order</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>

