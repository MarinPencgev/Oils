@model IEnumerable<Oils.Data.Domains.Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Default</title>
</head>
<body>
    <p>
        <h1>PRODUCT CATALOG</h1>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Viscosity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PackageCapacity)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Viscosity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackageCapacity)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
